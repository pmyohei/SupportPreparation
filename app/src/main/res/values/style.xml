<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ダイアログ -->
    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_open</item>
        <item name="android:windowExitAnimation">@anim/dialog_close</item>
    </style>

    <!-- TimePickerDialog テーマ -->
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TimePickerTheme_Button</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TimePickerTheme_Button</item>
    </style>

    <style name="TimePickerTheme_Button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main</item>
    </style>

    <!-- Switch テーマ -->
    <style name="Switch" parent="Theme.AppCompat.Light">
        <!--ボタンON時のボタンの通り道（透明度30%）・ボタンとタッチフィードバックカラー-->
        <item name="colorControlActivated">@color/main</item>
        <!--ボタンOFF時のボタンの通り道（透明度30%）-->
        <item name="android:colorForeground">@color/bg_switch_off</item>
        <!-- OFFボタンを押したときのタッチフィードバックカラー -->
        <item name="colorControlHighlight">@color/main</item>
    </style>

</resources>