<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="16">

    <item android:id="@+id/select_on"
        android:drawable="@drawable/ic_time_128"
        android:state_checked="true"/>

    <item android:id="@+id/select_off"
        android:drawable="@drawable/ic_time_128"/>

    <transition
        android:drawable="@drawable/avd_time_128"
        android:fromId="@id/select_off"
        android:toId="@id/select_on" />

</animated-selector>
