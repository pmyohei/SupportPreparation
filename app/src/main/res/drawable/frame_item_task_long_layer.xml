<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1px"
                android:color="@color/bg_task_long" />

            <solid
                android:color="@color/bg_task_long" />

            <size
                android:width="100dp"
                android:height="64dp" />

            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:left="30dp"
                android:right="30dp"/>

            <corners
                android:radius="@dimen/task_corner_radius" />

        </shape>

    </item>


    <!-- 影のレイヤー -->
    <item android:left="3dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#66404040" />
        </shape>
    </item>
    <!-- 枠のレイヤー -->
    <item android:bottom="4dp" android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#ff3b52e2" />
        </shape>
    </item>
</layer-list>