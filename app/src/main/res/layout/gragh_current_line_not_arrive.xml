<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gragh_current_time_height"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <View
        android:id="@+id/v_currentLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_current_time_line"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limittime_no_input"
        android:textColor="@color/tx_current_time" />

</LinearLayout>

