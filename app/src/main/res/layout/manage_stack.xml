<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_common"
    tools:context=".ui.stackManager.StackManagerFragment">

    <LinearLayout
        android:id="@+id/ll_startGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@drawable/frame_limit_date"
            android:text="@string/limitdate_no_input"
            android:textColor="@color/tx_limit_line"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/limittime_no_input"
            android:textColor="@color/tx_limit_line"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/v_startLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/bg_limit_line" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_stackArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:overScrollMode="never"
        android:layoutAnimation="@anim/layout_anim_stack_task"/>

    <LinearLayout
        android:id="@+id/ll_limitGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/v_limitLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/bg_limit_line" />

        <TextView
            android:id="@+id/tv_limitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/limittime_no_input"
            android:textColor="@color/tx_limit_line"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_limitDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@drawable/frame_limit_date"
            android:text="@string/limitdate_no_input"
            android:textColor="@color/tx_limit_line"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="60dp"
        android:background="@drawable/frame_select_area">

        <ImageView
            android:id="@+id/iv_selectSwitch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:background="@drawable/avd_task_to_group"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_taskList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:overScrollMode="never"
            android:layoutAnimation="@anim/layout_anim_task_list"/>

        <!-- 画面表示時は非表示。クリックにより「やること」リストと切り替え -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_groupList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:overScrollMode="never"
            android:layoutAnimation="@anim/layout_anim_task_list"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
